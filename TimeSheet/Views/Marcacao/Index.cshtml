@model IEnumerable<TimeSheet.ViewModels.Marcacao.MarcacaoVM>

@{
    ViewBag.Title = "Marcações";
}

<br />

<p>
    @*@Html.ActionLink("Novo", "Create")*@

    <a href="@Url.Action("Create", "Marcacao")" class="btn btn-success" aria-label="Left Align">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Novo
    </a>
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataMarcacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntradaManha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SaidaManha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntradaTarde)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SaidaTarde)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>*@
        <th>Ações</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataMarcacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntradaManha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaidaManha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntradaTarde)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaidaTarde)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>*@
            <td>
                @*@Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhe", "Details", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id })*@

                <a href="@Url.Action("Edit", "Marcacao")" class="btn btn-warning btn-sm" aria-label="Left Align" id=@item.Id data-toggle="tooltip" title="Editar">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Details", "Marcacao")" class="btn btn-info btn-sm" aria-label="Left Align" id=@item.Id data-toggle="tooltip" title="Detalhe">
                    <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Delete", "Marcacao")" class="btn btn-danger btn-sm" aria-label="Left Align" id=@item.Id data-toggle="tooltip" title="Exclur">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}